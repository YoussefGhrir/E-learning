{% extends 'base.html.twig' %}

{% block title %}Create Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h1 class="card-title mb-0">Create Profile</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_row(form.firstName, {'label': 'First Name', 'attr': {'class': 'form-control', 'placeholder': 'Enter your first name'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.lastName, {'label': 'Last Name', 'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.phoneNumber, {'label': 'Phone Number', 'attr': {'class': 'form-control', 'placeholder': 'Enter your phone number'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.birthdate, {'label': 'Birthdate', 'attr': {'class': 'form-control', 'type': 'date'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.bio, {'label': 'Bio', 'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Tell us about yourself'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Save Profile</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <div class="card-footer text-muted">
                        <a href="{{ path('app_profile_index') }}" class="btn btn-secondary">Back to Profile List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}